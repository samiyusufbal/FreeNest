@model FreeNest.Models.UserRegisterModel
@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Register | FreeNest Panel</title>
    <link rel="stylesheet" href="~/admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/admin/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/admin/css/style.css">
    <link href="~/lib/sweetalert/sweetalert2.min.css" rel="stylesheet" type="text/css">
    <link href="~/lib/toast-master/css/jquery.toast.css" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" href="~/admin/images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-5 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">REGISTER</h3>
                            <form method="post" action="" enctype="multipart/form-data">
                                @Html.ValidationSummary(false, "", new { @class = "text-danger mb-3" })

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Full Name *</label>
                                            <input type="text" class="form-control" asp-for="FullName" placeholder="Enter your full name" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Username *</label>
                                            <input type="text" class="form-control" asp-for="Username" placeholder="Enter username" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Email *</label>
                                    <input type="email" class="form-control" asp-for="Email" placeholder="Enter your email address" required>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Password *</label>
                                            <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Confirm Password *</label>
                                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm password" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label>Bio</label>
                                    <textarea class="form-control" asp-for="Bio" placeholder="Tell us about yourself" rows="5"></textarea>
                                </div>

                                <div class="form-group">
                                    <label>Profile Picture</label>
                                    <input type="file" class="form-control" asp-for="AvatarFile" accept="image/*">
                                    <small class="form-text text-muted">Select an image file for your profile picture</small>
                                </div>

                                <div class="form-group">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="TermsAccepted" name="TermsAccepted" required>
                                        <label class="form-check-label" for="TermsAccepted">
                                            I agree to the <a href="#" target="_blank">Terms and Conditions</a> *
                                        </label>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Create Account</button>
                                </div>

                                <div class="text-center mt-3">
                                    <p>Already have an account? <a href="/FreeNest/Administrator/Auth/Login/" class="text-primary">Sign In</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/admin/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/admin/js/off-canvas.js"></script>
    <script src="~/admin/js/hoverable-collapse.js"></script>
    <script src="~/admin/js/misc.js"></script>
    <script src="~/admin/js/settings.js"></script>
    <script src="~/admin/js/todolist.js"></script>
    <script src="~/lib/sweetalert/sweetalert2.min.js"></script>
    <script src="~/lib/toast-master/js/jquery.toast.js"></script>
    <script>
        @Html.Raw(TempData["returnMessage"]);
    </script>
</body>
</html>