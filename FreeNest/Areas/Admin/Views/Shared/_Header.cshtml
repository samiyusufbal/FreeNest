@using System.Security.Claims;
@using DATA
@using DATA.Models
@using Microsoft.Extensions.Caching.Memory
@inject IConfiguration Configuration
@inject DataDbContext _context
@inject IMemoryCache _memoryCache
@{
    string mainUrl = $"/{Configuration["AdminUrl"]}";
    string fullname = "";
    string avatarUrl = "";

    if (User.Identity.IsAuthenticated)
    {
        var userId = int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value);

        // Cache key
        var cacheKey = $"User_{userId}";

        // Cache’den çekmeye çalış
        if (!_memoryCache.TryGetValue(cacheKey, out User user))
        {
            // DB’den çek
            user = _context.Users.FirstOrDefault(u => u.Id == userId);

            if (user != null)
            {
                // Cache’e ekle (sliding expiration: 10 dakika)
                var cacheOptions = new MemoryCacheEntryOptions()
                    .SetSlidingExpiration(TimeSpan.FromMinutes(10));
                _memoryCache.Set(cacheKey, user, cacheOptions);
            }
        }

        if (user != null)
        {
            fullname = user.FullName;
            avatarUrl = user.AvatarUrl ?? "/admin/images/faces/face15.jpg";
        }
    }
}
